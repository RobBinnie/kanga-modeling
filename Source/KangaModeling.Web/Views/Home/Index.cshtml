@{
  ViewBag.Title = "Home";
}
@if (false)
{ <script src="../../Scripts/JQuery/jquery-1.5.1-vsdoc.js" type="text/javascript"></script> }
@section ViewJavaScript {
  <script type="text/javascript">

    var delay = (function () {
      var timer = 0;
      return function (callback, ms) {
        clearTimeout(timer);
        timer = setTimeout(callback, ms);
      };
    })();

    var sourceElement = jQuery('#source');
    var styleElement = jQuery('#style');
    var diagramElement = jQuery('#diagram');

    var fading = false;

    function compile() {

      var arguments = { source: sourceElement.val(), type: 'sequence', style: styleElement.val() };
      
      kanga.client.createDiagram(arguments, function (result) {

        diagramElement.waitForImages(function () {

          diagramElement.fadeTo('normal', 1.0);

        });
        diagramElement.attr('src', result.diagram);

      });

    }

    jQuery(document).ready(function () {

      sourceElement.bind('input paste', function () {

        if (!fading) {

          fading = true;
          diagramElement.fadeTo('slow', 0.25, 'swing', function () { fading = false });

        }

        delay(function () {

          compile();

        }, 500);

      });

      styleElement.change(function () {

        if (!fading) {

          fading = true;
          diagramElement.fadeTo('slow', 0.25, 'swing', function () { fading = false });

        }

        compile();

      });

      compile();

    });

  </script>
}
<p>
  KangaModeling is an open source project <a href="http://kangamodeling.codeplex.com">
    hosted at CodePlex</a>. KangaModeling allows you to produce UML (like) diagrams
  very easily. The main idea is to generate the diagram from a lightweight markup
  language.
</p>
<blockquote>
  You can use it in your <strong>Blog</strong>,<strong>Wiki</strong> or <strong>Website</strong>
  to generate nice looking diagrams from a compact markup.
</blockquote>
